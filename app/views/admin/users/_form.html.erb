<table>
  <tr>
    <td><%= t("email") %>: </td>
    <td>
      <%= error_message_on :user, :email%>
      <%= f.text_field :email  %>
    </td>
  </tr>
  <tr>
    <td><%= t("password") %>:</td>
    <td>
      <%= error_message_on :user, :password%>
      <%= f.password_field :password  %>
    </td>
  </tr>
  <tr>
    <td><%= t("confirm") %>:</td>
    <td>
      <%= f.password_field :password_confirmation %>
    </td>
  </tr>    
</table>
