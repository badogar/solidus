<table>
  <tr>
    <td width="150"><%= t("first_name") %></td>
    <td><%= f.text_field :firstname %></td>
  </tr>
  <tr>
    <td><%= t("last_name") %></td>
    <td><%= f.text_field :lastname %></td>
  </tr>
  <tr>
    <td><%= t("street_address") %></td>
    <td><%= f.text_field :address1 %></td>
  </tr>
  <tr>
    <td><%= t("street_address_2") %></td>
    <td><%= f.text_field :address2 %></td>
  </tr>
  <tr>
    <td><%= t("city") %></td>
    <td><%= f.text_field :city %></td>
  </tr>
  <tr id="address_states_row">
		<%= render :partial => "states" %>
  </tr>
  <tr>
    <td><%= t("zip") %></td>
    <td><%= f.text_field :zipcode %></td>
  </tr>
  <tr>
    <td><%= t("country") %></td>
    <td>
      <select id="address_country_id" name="address[country_id]" style="width:150px;"> 
        <%= options_from_collection_for_select(@countries, :id, :name, @selected_country_id) %>
      </select>
			<%= observe_field :address_country_id, :url => { :action => :country_changed },
	    	:frequency => 2,
	    	:update => "address_states_row",
	  		:on => "onselect",
		 		:with => "address[country_id]",
				:loading => "$('address_states_row').childElements()[1].update('Loading...');"
			%>    
    </td>
  </tr>
  <tr>
    <td><%= t("phone") %></td>
    <td><%= f.text_field :phone %></td>
  </tr>
</table>
