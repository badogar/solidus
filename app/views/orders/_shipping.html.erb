<% order_form.fields_for :ship_address do |ship_form| %>     
  <h2><%= t("shipping_address")%></h2>
  <% if current_user -%>
  <div class="saved_address inner">
     <input type="radio" name="ship_address" class="saved_radio" value="1" />
     <label for="<%= t('saved_address') %>"><%= t('saved_address') %></label>
     <%= collection_select("order", :ship_address_id, current_user.addresses, :id, :nickname) %>
     <p></p>
   </div>
   <div class="new_address inner">
     <input type="radio" name="ship_address" class="saved_radio" value="0" />
     <label for="<%= t("new_address") %>"><%= t("new_address") %></label>
   <% else -%>
   <div class="inner">
   <% end -%>
  	<p><label for="<%= t("use_billing_address") %>" id="use_billing"><%= t("use_billing_address") %></label><input id="checkout_same_address" name="checkout_same_address" type="checkbox" /></p> 
  	<p id="sfname">
  		<label for="<%= t("first_name") %>"><%= t("first_name") %></label>
  		<%= ship_form.text_field :firstname, :class => 'required' -%><span class="req">*</span>
  	</p>
  	<p id="slname">
  		<label for="<%= t("last_name") %>"><%= t("last_name") %></label>
  		<%= ship_form.text_field :lastname, :class => 'required' -%><span class="req">*</span>
  	</p>
  	<p id="saddress">
  		<label for="<%= t("street_address") %>"><%= t("street_address") %></label>
  		<%= ship_form.text_field :address1, :class => 'required' -%><span class="req">*</span>
  	</p>
  	<p id="saddress2">
  		<label for="<%= t("street_address_2") %>"><%= t("street_address_2") %></label>
  		<%= ship_form.text_field :address2 %>
  	</p>
  	<p id="scity">
  		<label for="<%= t("city") %>"><%= t("city") %></label>
  		<%= ship_form.text_field :city, :class => 'required' -%><span class="req">*</span>
  	</p>    
  	<p>
  		<label for="<%= t("state") %>"><%= t("state") %></label>
  		<span id="sstate">
  			<%= collection_select("order[ship_address_attributes]", 
  			:state_id, 
  			@states, 
  			:id, 
  			:name, 
  			{:include_blank => true}, 
  			{:style=> 'width:150px;'}) %>
  		</span>
  		<span class="req">*</span>
  	</p>  
  	<p id="szip">
  		<label for="<%=t ("zip") %>"><%= t("zip") %></label>
  		<%= ship_form.text_field :zipcode, :class => 'required' -%><span class="req">*</span>
  	</p>
  	<p id="scountry">
  		<label for="<%= t("country") %>"><%= t("country") %></label>
  		<span id="scountry"><%= ship_form.collection_select :country_id, @shipping_countries, :id, :name, {}, {:style => 'width:150px;', :class => 'required'} %></span>
  	</p>
  	<p id="sphone">
  		<label for="<%= t("phone") %>"><%= t("phone") %></label>
  		<%= ship_form.text_field :phone, :class => 'required' -%><span class="req">*</span>
  	</p>
  </div>
  <div class="inner">
  	<p><input id="continue_shipping" type="button" value="<%=t("continue")%>"/></p>
  </div>
<% end %>
