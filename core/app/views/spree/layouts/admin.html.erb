<!--[if IE 9 ]>    <html class="ie ie9" lang="en"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="en"><!--<![endif]-->
  <head data-hook="admin_inside_head">
    <%= render :partial => 'spree/admin/shared/head' %>
  </head>
  
  <body class='admin' data-ajax-root-path="<%= spree.root_path %>">
    <div id='wrapper' data-hook>

      <% if flash[:error] %>
        <div class="flash error"><%= flash[:error] %></div>
      <% end %>
      <% if notice %>
        <div class="flash notice"><%= notice %></div>
      <% end %>

      <div id="progress"><%= image_tag 'admin/progress.gif' %> <%= t(:loading) %>...</div>

      <%= render :partial => 'spree/admin/shared/alert', :collection => session[:alerts] %>

      <header id="header" data-hook>

        <div class="container">
          <div class="row">        

            <figure data-hook="logo-wrapper" class="columns eight">
              <%= link_to image_tag(Spree::Config[:admin_interface_logo], :id => 'logo'), spree.admin_path %>
            </figure>

            <!-- <h1 class="columns four" data-hook="admin-title"><%= link_to t(:administration), spree.admin_path %></h1> -->

            <!-- <nav data-hook="admin_login_navigation_bar" class="columns eight"></nav> -->

          </div>
        </div>
        
      </header>

      <nav id="admin-menu" data-hook>
        <div class="container">
          <div class="row">
            <ul data-hook="admin_tabs" class="inline-menu fullwidth-menu">
              <%= render :partial => 'spree/admin/shared/tabs' %>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container">
        <div class="row">
          <div class="<%= 'with-sidebar ' if content_for?(:sidebar) %>" id="content" data-hook>

            <% if content_for?(:sub_menu) %>
              <nav id="sub-menu" data-hook>
                <div class="container">
                  <div class="row">
                    <%= yield :sub_menu %>
                  </div>
                </div>
              </nav>
            <% end %>

            <% if content_for?(:content_header) %>
              <header id="content-header" data-hook>
                <%= yield :content_header %>
              </header>
            <% end %>

            <div class="<%= if content_for?(:sidebar) then 'twelve' else 'sixteen' end %> columns">
              <%= yield %>
            </div>


            <% if content_for?(:sidebar) %>
              <aside id="sidebar" data-hook class="four columns">
                <%= yield :sidebar %>
              </aside>
            <% end %>

          </div>
        </div>

      </div>

      <div id="footer" data-hook>
        
      </div>

    </div>

    <div data-hook="admin_footer_scripts"></div>

  </body>
</html>
