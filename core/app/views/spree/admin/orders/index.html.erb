<% content_for :page_title do %>
  <%= t(:listing_orders) %>
<% end %>

<% content_for :page_actions do %>
  <ul class='toolbar order-links header-action-links inline-menu'>
    <li>
      <%= button_link_to t(:new_order), new_admin_order_url, :icon => 'icon-plus', :id => 'admin_new_order' %>
    </li>
  </ul>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_orders_index_search">
    
    <h3 class="filter-title"><%= t(:search) %></h3>

<table class="index responsive" id="listing_orders" data-hook>
  <thead>
    <tr data-hook="admin_orders_index_headers">
      <% if @show_only_completed %>
        <th <%= sort_by_active_class('completed_at')%> ><%= sort_link @search, :completed_at, t(:completed_at, :scope => 'activerecord.attributes.spree/order') %></th>
      <% else %>
        <th <%= sort_by_active_class('created_at')%>><%= sort_link @search, :created_at,   t(:created_at, :scope => 'activerecord.attributes.spree/order') %></th>
      <% end %>
      <th <%= sort_by_active_class('number')%>><%= sort_link @search, :number,         t(:number, :scope => 'activerecord.attributes.spree/order') %></th>
      <th <%= sort_by_active_class('state')%>><%= sort_link @search, :state,          t(:state, :scope => 'activerecord.attributes.spree/order') %></th>
      <th <%= sort_by_active_class('payment_state')%>><%= sort_link @search, :payment_state,  t(:payment_state, :scope => 'activerecord.attributes.spree/order') %></th>
      <th <%= sort_by_active_class('shipment_state')%>><%= sort_link @search, :shipment_state, t(:shipment_state, :scope => 'activerecord.attributes.spree/order') %></th>
      <th <%= sort_by_active_class('email')%>><%= sort_link @search, :email,          t(:email, :scope => 'activerecord.attributes.spree/order') %></th>
      <th <%= sort_by_active_class('total')%>><%= sort_link @search, :total,          t(:total, :scope => 'activerecord.attributes.spree/order') %></th>
      <th data-hook="admin_orders_index_header_actions"></th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr data-hook="admin_orders_index_rows" class="state-<%= order.state.downcase %>">
      <td <%= sort_by_active_class('created_at')%> <%= sort_by_active_class('completed_at')%>><%= l (@show_only_completed ? order.completed_at : order.created_at).to_date %></td>
      <td <%= sort_by_active_class('number')%>><%= link_to order.number, admin_order_path(order) %></td>
      <td <%= sort_by_active_class('state')%> class="align-center"><span class="state <%= order.state.downcase %>"><%= t("order_state.#{order.state.downcase}") %></span></td>
      <td <%= sort_by_active_class('payment_state')%> class="align-center"><span class="state <%= order.payment_state %>"><%= link_to t("payment_states.#{order.payment_state}"), admin_order_payments_path(order) if order.payment_state %></span></td>
      <td <%= sort_by_active_class('shipment_state')%> class="align-center"><span class="state <%= order.shipment_state %>"><%= link_to t("shipment_states.#{order.shipment_state}"), admin_order_shipments_path(order) if order.shipment_state %></span></td>
      <td <%= sort_by_active_class('email')%>><%= mail_to order.email %></td>
      <td <%= sort_by_active_class('total')%>><%= order.display_total %></td>
      <td class='actions' data-hook="admin_orders_index_row_actions">
        <%= link_to_edit_url edit_admin_order_path(order), :title => "admin_edit_#{dom_id(order)}" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @orders %>
