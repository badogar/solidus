<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:image_settings) %>
<% end %>

<% content_for :page_actions do %>
  <ul class="actions inline-menu">
    <li>
      <%= link_to_with_icon 'icon-edit', t(:edit), edit_admin_image_settings_path, :id => 'admin_image_settings_link', :class => 'button' %> 
    </li>
  </ul>
<% end %>

<dl>
  <dt><%= t(:attachment_path) %>:</dt>
  <dd><%= Spree::Config[:attachment_path] %></dd>

  <dt><%= t(:attachment_default_url) %>:</dt>
  <dd><%= Spree::Config[:attachment_default_url] %></dd>

  <dt><%= t(:attachment_default_style) %>:</dt>
  <dd><%= Spree::Config[:attachment_default_style] %></dd>

  <dt><%= t(:defined_paperclip_styles) %>:</dt>
  <dd><%= @styles_list %></dd>

  <dt><%= Spree::Config[:use_s3] ? t(:s3_used_for_product_images) : t(:s3_not_used_for_product_images) %></dt>
</dl>