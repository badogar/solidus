<% @body_id = 'signup' %>

<%= render 'spree/shared/error_messages', :target => @user %>

<div id="new-customer">
  <h2><%= t(:new_customer) %></h2>

  <div data-hook="signup">

    <%= form_for :user, :url => spree_auth.user_registration_path(@user) do |f| %>
      <div data-hook="signup_inside_form"%>
        <%= render 'spree/shared/user_form', :f => f %>
        <p><%= f.submit t(:create), :class => 'button primary' %></p>
      </div>
    <% end %>
    <%= t(:or) %> <%= link_to t(:login_as_existing), spree_auth.login_path %>

  </div>

</div>

<div data-hook="login_extras"></div>
