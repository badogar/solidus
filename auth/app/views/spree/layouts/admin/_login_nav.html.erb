<% if current_user %>
  <ul id="login-nav">
    <li><%= t(:logged_in_as) %>: <%= current_user.email %></li>
    <li><%= link_to t(:account), spree_auth.edit_user_path(current_user) %></li>
    <li><%= link_to t(:logout), spree_auth.destroy_user_session_path %></li>
    <li><%= link_to t(:store), spree_core.products_path %></li>
  </ul>
<% end %>
