<table class="index">
  <tr>
    <th><%= "#{t('spree.date')}/#{t('spree.time')}" %></th>
    <th><%= t("amount") %></th>
    <th><%= t("payment_method") %></th>
    <th></th>
  </tr>
  <% payments.each do |payment| %>
    <tr>
      <td><%= payment.created_at.to_s(:date_time24) %></td>
      <td><%= number_to_currency(payment.amount) %></td>
      <td><%= payment_method_name payment %></td>
      <td>
        <%= link_to t('show'), admin_order_payment_path(@order, payment) %>
        <% if payment.can_credit? %>
          | <%= link_to t('refund'), credit_admin_order_payment_path(@order, payment) %>
        <% end %>
        <% if payment.can_void? %>
          | <%= link_to t('void'), void_admin_order_payment_path(@order, payment), :method => :post, :confirm => t('are_you_sure') %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
