<table class="index">
  <tr>
    <th colspan="8"><%= name %></th>
  </tr>
  <tr>
    <td>
      <label><%= Address.human_attribute_name(:first_name) %>:</label>
    </td>
    <td colspan="3"><%= f.text_field :firstname %></td>
    <td>
      <label><%= Address.human_attribute_name(:last_name) %>:</label>
    </td>
    <td colspan="3"><%= f.text_field :lastname %></td>
  </tr>
  <tr>
    <td>
      <label><%= Address.human_attribute_name(:address1) %>:</label>
    </td>
    <td colspan="3"><%= f.text_field :address1, :class => "fullwidth" %></td>
    <td>
      <label><%= Address.human_attribute_name(:address2) %>:</label>
    </td>
    <td colspan="3"><%= f.text_field :address2, :class => "fullwidth" %></td>
  </tr>
  <tr>
    <td>
      <label><%= Address.human_attribute_name(:city) %>:</label>
    </td>
    <td><%= f.text_field :city %></td>
    <td>
      <label><%= Address.human_attribute_name(:zipcode) %>:</label>
    </td>
    <td><%= f.text_field :zipcode, :style => "width:100px;" %></td>
    <td>
      <label><%= Address.human_attribute_name(:state) %>:</label>
    </td>
    <td>
      <span id="<%= name==t('shipping_address') ? "s" : "b" %>state">
        <%= f.text_field :state_name, :style => "width:150px;display:#{f.object.country.states.empty? ? 'block' : 'none' };", :disabled => !f.object.country.states.empty? %>
        <%= f.collection_select :state_id, @states, :id, :name, {:include_blank => true}, {:style=> "width:150px;display:#{f.object.country.states.empty? ? 'none' : 'block' };", :disabled => f.object.country.states.empty?} %>
      </span>
    </td>
    <td>
      <label><%= Address.human_attribute_name(:country) %>:</label>
    </td>
    <td>
      <span id="<%= name==t('shipping_address') ? "s" : "b" %>country"><%= f.collection_select :country_id, @countries, :id, :name, {}, {:style => 'width:150px;'} %></span>
    </td>
  </tr>
  <tr>
    <td>
      <label><%= Address.human_attribute_name(:phone) %>:</label>
    </td>
    <td colspan="7"><%= f.text_field :phone %></td>
  </tr>
</table>

